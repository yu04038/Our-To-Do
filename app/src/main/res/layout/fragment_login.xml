<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.login.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="102dp"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:text="Our To Do 로그인"
            android:textColor="#333333"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:text="Enjoy your day"
            android:textColor="#333333"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/email_form"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:hint="이메일(example@ourtodo.com)"
            android:padding="14dp"
            android:textSize="14dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/email_certificate_edittext_shape_not_focused"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:id="@+id/password_form"
            android:layout_width="320dp"
            android:layout_height="48dp"

            android:hint="비밀번호"
            android:padding="14dp"
            android:textSize="14dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/email_certificate_edittext_shape_not_focused"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_form" />

        <Button
            android:id="@+id/login_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="320dp"
            android:layout_height="52dp"
            android:text="로그인"
            android:textSize="14dp"
            android:textColor="#BFBFBF"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:background="@drawable/email_certificate_button_shape_disabled"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>